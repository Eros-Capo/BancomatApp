<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yusby.bancomat20.Change_Password_Activity"
    android:background="@drawable/background_test1"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        app:srcCompat="@mipmap/v4" />

    <TextView
        android:id="@+id/erroreMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Errore inserisci parametri validi"
        android:textAlignment="center"
        android:textColor="?attr/colorError"
        android:textSize="14sp"
        android:visibility="invisible" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/bannerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/erroreMessage"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <EditText
            android:id="@+id/IbanEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="start"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLength="27"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bannerEmail"
        android:layout_marginBottom="9dp"
        android:layout_toStartOf="@+id/bannerEmail"
        app:srcCompat="@drawable/ic_email_white_28dp" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/bannerParolaChiave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bannerEmail"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/IbanParolaChiave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="start"
            android:ems="10"
            android:hint="Parola Chiave"
            android:inputType="numberPassword"
            android:maxLength="27"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bannerParolaChiave"
        android:layout_marginBottom="9dp"
        android:layout_toStartOf="@+id/bannerParolaChiave"
        app:srcCompat="@drawable/ic_vpn_key_white_28dp" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/Vecchiapaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bannerParolaChiave"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:passwordToggleEnabled="true">

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Nuovapaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Vecchiapaa"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/Nuovapassaword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="start"
            android:ems="10"
            android:hint="Nuova Password"
            android:inputType="textPassword"
            android:maxLength="27"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Nuovapaa"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@+id/Nuovapaa"
        app:srcCompat="@drawable/ic_icons8_keepass" />

    <Button
        android:id="@+id/cmabiaPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Nuovapaa"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_login_button"
        android:text="Cambia Password"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />



</RelativeLayout>
